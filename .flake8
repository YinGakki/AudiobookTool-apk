[flake8]
max-line-length = 127
max-complexity = 10
ignore = 
    E501,  # line too long
    W503,   # line break before binary operator
    E203,   # whitespace before ':'
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .pytest_cache
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
